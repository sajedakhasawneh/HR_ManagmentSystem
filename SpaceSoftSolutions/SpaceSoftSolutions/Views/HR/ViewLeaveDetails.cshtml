@{
    ViewData["Title"] = "Leave Request Details";
}



<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-dark">Leave Request Details</h1>
        <a href="@Url.Action("ApprovedLeaves", "HR")" class="btn btn-outline-primary">Back to Approved Requests</a>
    </div>

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden animated-card">
        <div class="card-header" style="background-color: #3a4fb1; color: white; font-weight: bold; text-align: center; padding: 15px;">
            Leave Information
        </div>
        <div class="card-body text-dark px-5 py-4">
            <p class="fs-5"><strong>Employee:</strong> @Model.Employee.Name</p>
            <p class="fs-5"><strong>Email:</strong> @Model.Employee.Email</p>
            <p class="fs-5"><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
            <p class="fs-5"><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
            <p class="fs-5"><strong>Reason:</strong> @Model.Reason</p>
            <p class="fs-5"><strong>Status:</strong> <span class="badge" style="background-color: #3a4fb1; color: white; padding: 10px 15px; border-radius: 10px;">@Model.Status</span></p>
        </div>
    </div>
</div>

<style>
    body {
        background: #f8f9fc;
        font-family: 'Poppins', sans-serif;
        color: #333;
        padding: 20px;
    }

    .container {
        max-width: 800px;
        background: white;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

    h1 {
        color: #2c3e50;
    }

    .animated-card {
        animation: fadeInUp 0.8s ease-in-out;
    }

    .btn-primary {
        padding: 10px 20px;
        background: #3a4fb1;
        color: white;
        border: none;
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
    }

        .btn-primary:hover {
            background: #2e3d91;
        }

    .btn-outline-primary {
        color: #3a4fb1;
        border: 2px solid #3a4fb1;
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
    }

        .btn-outline-primary:hover {
            background-color: #3a4fb1;
            color: white;
        }

    .badge {
        font-size: 1rem;
        padding: 10px 15px;
        border-radius: 10px;
    }
</style>
