@{
    ViewData["Title"] = "New Password";
}

@section Styles {
    <link href="~/css/NewPass.css" rel="stylesheet" />
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <form asp-action="NewPassword" class="w-50">
        <div class="card shadow-lg p-5 rounded-4">
            <h3 class="text-center mb-4 text-primary fw-bold">Create New Password</h3>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger text-center" style="display:none;"></div>

            <!-- إدخال كلمة المرور الجديدة -->
            <div class="mb-4">
                <label class="form-label fw-semibold" for="Password">New Password</label>
                <input type="password" name="Password" class="form-control input-shadow" id="Password" placeholder="Enter new password" required />
                <span class="text-danger"></span>
            </div>

            <!-- تأكيد كلمة المرور -->
            <div class="mb-4">
                <label class="form-label fw-semibold" for="ConfirmPassword">Confirm Password</label>
                <input type="password" name="ConfirmPassword" class="form-control input-shadow" id="ConfirmPassword" placeholder="Confirm new password" required />
                <span class="text-danger"></span>
            </div>

            <!-- زر إرسال -->
            <div class="mb-4">
                <button type="submit" class="btn btn-primary w-100 py-2 shadow">
                    <i class="fas fa-lock"></i> Set New Password
                </button>
            </div>

            <!-- رابط العودة إلى تسجيل الدخول -->
            <div class="text-center">
                <a asp-action="Login" asp-controller="Login" class="text-muted">
                    <i class="fas fa-arrow-left"></i> Already have an account? Log in
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

<style>
    /* تحسين تصميم الحقول */
    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
    }

        .form-control:focus {
            border-color: #3a4fb1;
            box-shadow: 0px 0px 10px rgba(58, 79, 177, 0.5);
        }

    /* تحسين تصميم الزر */
    .btn-primary {
        background-color: #3a4fb1 !important;
        border-color: #3a4fb1 !important;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: #2c3d91 !important;
            border-color: #2c3d91 !important;
        }

    /* جعل التصميم متجاوبًا */
    .text-primary {
        color: #2c3d91 !important;
    }
</style>
