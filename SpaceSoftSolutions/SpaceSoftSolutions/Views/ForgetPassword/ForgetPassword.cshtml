@{
    Layout = null; // Ensures it doesn't use the general layout
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
          /*   background: url('https://spacesolutions.be/wp-content/uploads/Space-Solutions-Campaign-image.png') no-repeat center center; */
            background-size: cover;
            position: relative;
        }

        .container {
            width: 80%;
            max-width: 900px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            display: flex;
        }

        .image-section {
            width: 50%;
            background: url('https://spacesolutions.be/wp-content/uploads/Space-Solutions-Campaign-image.png') no-repeat center center;
            background-size: cover;
        }

        .form-section {
            width: 50%;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .form-section h3 {
                font-weight: bold;
                color: #333;
                text-align: center;
            }

        .btn-primary {
            width: 100%;
            background-color: #007bff;
            border: none;
            transition: 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .text-center a {
            color: #007bff;
            text-decoration: none;
        }

        /* Social Panel Styling */
        .social-panel-container {
            position: fixed;
            right: 0;
            bottom: 80px;
            transform: translateX(100%);
            transition: transform 0.4s ease-in-out;
        }

            .social-panel-container.visible {
                transform: translateX(0);
            }

        .social-panel {
            background-color: #fff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .social-panel ul {
                list-style: none;
                padding: 0;
                display: flex;
                justify-content: space-between;
            }

            .social-panel li {
                margin: 5px;
            }

            .social-panel a {
                color: #007bff;
                font-size: 24px;
            }

        .floating-btn {
            position: fixed;
            right: 20px;
            bottom: 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 12px 18px;
            font-size: 16px;
            cursor: pointer;
        }

            .floating-btn:hover {
                background-color: #0056b3;
            }

       
    </style>
</head>
<body>

    <div class="container">
        <!-- Left Image Section -->
        <div class="image-section"></div>

        <!-- Right Form Section -->
        <div class="form-section">
            <h3>Forgot Password?</h3>
            <p class="text-center text-muted">Enter your email, and we'll send a reset link.</p>

            <form asp-action="ForgetPassword" method="post">
                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <input name="Email" type="email" class="form-control" placeholder="example@email.com" required />
                </div>

                <button type="submit" class="btn btn-primary">Send Reset Link</button>

                <div class="text-center mt-3">
                    <a href="/Login">Back to Login</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Social Panel -->
    <div class="social-panel-container" id="socialPanel">
        <div class="social-panel">
            <p>
                Created with <i class="fa fa-heart"></i> by
                <a target="_blank" href="https://florin-pop.com">Florin Pop</a>
            </p>
            <button class="close-btn" onclick="toggleSocialPanel()"><i class="fas fa-times"></i></button>
            <h4>Get in touch on</h4>
            <ul>
                <li><a href="https://www.patreon.com/florinpop17" target="_blank"><i class="fab fa-discord"></i></a></li>
                <li><a href="https://twitter.com/florinpop1705" target="_blank"><i class="fab fa-twitter"></i></a></li>
                <li><a href="https://linkedin.com/in/florinpop17" target="_blank"><i class="fab fa-linkedin"></i></a></li>
                <li><a href="https://facebook.com/florinpop17" target="_blank"><i class="fab fa-facebook"></i></a></li>
                <li><a href="https://instagram.com/florinpop17" target="_blank"><i class="fab fa-instagram"></i></a></li>
            </ul>
        </div>
    </div>

    <button class="floating-btn" onclick="toggleSocialPanel()">Get in Touch</button>

    <script>
        function toggleSocialPanel() {
            document.getElementById("socialPanel").classList.toggle("visible");
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
