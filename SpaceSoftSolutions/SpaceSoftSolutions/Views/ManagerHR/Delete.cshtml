@model SpaceSoftSolutions.Models.Manager

@{
    ViewData["Title"] = "Delete Manager";
    Layout = "DashboardLayout";
}
<link rel="stylesheet" href="~/css/DeleteManager.css" asp-append-version="true" />

<div class="container mt-5">
    <h1 class="text-danger text-center">Delete Manager</h1>
    <hr />

    <div class="alert alert-warning shadow-sm text-center p-4">
        <h4 class="alert-heading fw-bold">Are you sure you want to delete this manager?</h4>
        <p class="mb-0">This action cannot be undone. All data related to this manager will be permanently deleted.</p>
    </div>

    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header text-white text-center fw-semibold" style="background-color: #3a4fb1;">
            Manager Details
        </div>
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4">Password:</dt>
                <dd class="col-sm-8 fw-bold text-muted">********</dd>

                <dt class="col-sm-4">Department:</dt>
                <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Department.Name)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <form asp-action="DeleteManager">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
            <a asp-action="Manager" class="btn btn-secondary btn-lg shadow-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

<style>
    /* ✅ تحسين تصميم العناصر */
    .alert-warning {
        background-color: #fff3cd;
        border-left: 5px solid #ffae42;
    }

    .card {
        border-radius: 12px;
    }

    .card-header {
        font-size: 20px;
    }

    .btn-danger {
        background-color: #e63946 !important;
        border-color: #e63946 !important;
    }

    .btn-secondary {
        background-color: #7A73D1 !important;
        border-color: #7A73D1 !important;
    }

    .btn-danger:hover {
        background-color: #c72b39 !important;
    }

    .btn-secondary:hover {
        background-color: #5e5ca8 !important;
    }

    dl dt {
        font-weight: bold;
        color: #3a4fb1;
    }

    dl dd {
        font-size: 16px;
    }
</style>
