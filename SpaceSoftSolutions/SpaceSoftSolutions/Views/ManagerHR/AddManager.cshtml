@model IEnumerable<SpaceSoftSolutions.Models.Department>

@{
    ViewData["Title"] = "Add Manager";
    Layout = "DashboardLayout";
}
<link rel="stylesheet" href="~/css/AddManager.css" asp-append-version="true" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-primary fw-bold">Add Manager</h1>
        <a asp-action="Manager" asp-controller="ManagerHR" class="btn btn-outline-primary shadow-sm">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient text-white text-center py-3" style="background-color: #3a4fb1;">
                    <h4 class="card-title mb-0">Add New Manager</h4>
                </div>
                <div class="card-body p-5" style="background-color: #f8f9fa;">
                    <form method="post" action="AddManager">
                        <!-- الاسم -->
                        <div class="mb-4">
                            <label for="name" class="form-label fw-semibold">Full Name</label>
                            <input type="text" class="form-control rounded-3 shadow-sm" id="name" name="Name" placeholder="Enter full name" required>
                        </div>

                        <!-- البريد الإلكتروني -->
                        <div class="mb-4">
                            <label for="email" class="form-label fw-semibold">Email</label>
                            <input type="email" class="form-control rounded-3 shadow-sm" id="email" name="Email" placeholder="Enter email" required>
                        </div>

                        <!-- كلمة المرور -->
                        <div class="mb-4">
                            <label for="password" class="form-label fw-semibold">Password</label>
                            <input type="password" class="form-control rounded-3 shadow-sm" id="password" name="PasswordHash" placeholder="Enter password" required>
                        </div>

                        <!-- العنوان -->
                        <div class="mb-4">
                            <label for="address" class="form-label fw-semibold">Address</label>
                            <input type="text" class="form-control rounded-3 shadow-sm" id="address" name="Address" placeholder="Enter address" required>
                        </div>

                        <!-- القسم -->
                        <div class="mb-4">
                            <label for="department" class="form-label fw-semibold">Department</label>
                            <select name="DepartmentId" class="form-select rounded-3 shadow-sm" id="department" required>
                                <option value="" disabled selected>Select a department</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>

                        <!-- زر الإضافة -->
                        <button type="submit" class="btn btn-primary w-100 py-3 fw-bold shadow-sm" style="background-color: #3a4fb1; border-color: #3a4fb1;">
                            <i class="fas fa-plus-circle"></i> Add Manager
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

<style>
    /* ✅ تحسين تصميم النموذج */
    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #ccc;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus, .form-select:focus {
            border-color: #3a4fb1;
            box-shadow: 0 0 10px rgba(58, 79, 177, 0.3);
        }

    /* ✅ تحسين تصميم الأزرار */
    .btn-primary {
        background-color: #3a4fb1 !important;
        border: none;
        border-radius: 8px;
        padding: 10px 15px;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #2c3d91 !important;
        }

    .btn-outline-primary {
        border-color: #3a4fb1;
        color: #3a4fb1;
        border-radius: 8px;
    }

        .btn-outline-primary:hover {
            background-color: #3a4fb1;
            color: white;
        }

    /* ✅ تحسين تأثيرات الإدخال */
    .form-label {
        font-size: 16px;
        color: #3a4fb1;
    }

    /* ✅ تحسين تأثير البطاقة */
    .card {
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }
</style>
