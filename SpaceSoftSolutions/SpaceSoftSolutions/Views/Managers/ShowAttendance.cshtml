@model IEnumerable<SpaceSoftSolutions.Models.Attendance>

@{
    ViewData["Title"] = "ShowAttendance";
}
@{
    Layout = "DashboardManagers";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container-fluid py-4">
    <!-- جعل العرض كامل للصفحة -->
    <div class="card mb-4 shadow-lg">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center" style="background-color: #3a4fb1; color: white; border-radius: 12px 12px 0 0;">
            <h6 class="mb-0">Attendance Table</h6>
        </div>
        <div class="card-body px-3 pt-0 pb-2">
            <div class="table-responsive" style="overflow-x: auto;">
                <!-- منع السكرول الجانبي إلا عند الحاجة -->
                <table class="table table-hover text-center align-items-center mb-0" id="attendanceTable">
                    <thead style="background-color: #3a4fb1; color: white; font-size: 12px;">
                        <!-- تصغير الخط -->
                        <tr>
                            <th>Punch In</th>
                            <th>Punch Out</th>
                        </tr>
                    </thead>
                    <tbody style="background-color: #f8f9fa; font-size: 11px;">
                        <!-- تصغير حجم الخط ليكون الجدول أوسع -->
                        @foreach (var item in Model)
                        {
                            <tr class="hover-effect">
                                <td>@item.PunchIn</td>
                                <td>@(item.PunchOut.HasValue ? item.PunchOut.Value.ToString() : "N/A")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* ✅ تحسين تصميم الجدول ليكون أكثر وضوحًا */
    .table td, .table th {
        white-space: normal !important; /* السماح بالتفاف النص */
        word-wrap: break-word !important; /* كسر النص عند الحاجة */
        max-width: 200px; /* تحديد عرض أقصى للخلايا لمنع تمدد الجدول */
    }

    .table-hover tbody tr:hover {
        background-color: #dbe3ff !important;
        transition: all 0.3s ease-in-out;
    }

    

    /* تحسين الأزرار */
    .btn-primary {
        background-color: #3a4fb1 !important;
        border: none;
        border-radius: 8px;
        padding: 6px 10px;
    }

        .btn-primary:hover {
            background-color: #2c3d91 !important;
        }

    .btn-secondary {
        border-radius: 8px;
    }

    .badge {
        font-size: 12px;
        padding: 6px 10px;
        border-radius: 8px;
    }
</style>
