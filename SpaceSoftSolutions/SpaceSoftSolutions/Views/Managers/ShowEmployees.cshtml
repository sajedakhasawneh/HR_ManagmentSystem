@model IEnumerable<SpaceSoftSolutions.Models.Employee>

@{
    ViewData["Title"] = "ShowEmployees";
}
@{
    Layout = "DashboardManagers";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container-fluid py-4">
    <!-- جعل العرض كامل للصفحة -->
    <div class="card mb-4 shadow-lg">
        <div class="card-header pb-0 d-flex justify-content-between align-items-center" style="background-color: #3a4fb1; color: white; border-radius: 12px 12px 0 0;">
            <h6 class="mb-0">Employees Table</h6>
            <div>
                <a asp-action="CreateEmp" class="btn btn-light text-primary btn-sm"><i class="fas fa-user-plus"></i> Add Employee</a>
            </div>
        </div>
        <div class="card-body px-3 pt-0 pb-2">
            <div class="table-responsive" style="overflow-x: auto;">
                <!-- منع السكرول الجانبي إلا عند الحاجة -->
                <table class="table table-hover text-center align-items-center mb-0" id="employeeTable">
                    <thead style="background-color: #3a4fb1; color: white; font-size: 12px;">
                        <!-- تصغير الخط -->
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Position</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody style="background-color: #f8f9fa; font-size: 11px;">
                        <!-- تصغير حجم الخط ليكون الجدول أوسع -->
                        @foreach (var item in Model)
                        {
                            <tr class="hover-effect">
                                <td>
                                    <div class="d-flex align-items-center justify-content-center">
                                        <img src="../assets-Manager/img/team-4.jpg" class="avatar avatar-sm me-2" alt="user">
                                        <h6 class="mb-0 text-sm">@item.Name</h6>
                                    </div>
                                </td>
                                <td>@item.Email</td>
                                <td>@(item.Department?.Name ?? "N/A")</td>
                                <td>@item.Position</td>
                                <td>
                                    <a asp-action="ShowTasks" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Tasks</a>
                                    <a asp-action="ShowAttendance" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Attendance</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* ✅ تحسين تصميم الجدول ليكون أكثر وضوحًا */
    .table td, .table th {
        white-space: normal !important; /* السماح بالتفاف النص */
        word-wrap: break-word !important; /* كسر النص عند الحاجة */
        max-width: 200px; /* تحديد عرض أقصى للخلايا لمنع تمدد الجدول */
    }

    .table-hover tbody tr:hover {
        background-color: #dbe3ff !important;
        transition: all 0.3s ease-in-out;
    }

    

    /* تحسين الأزرار */
    .btn-primary {
        background-color: #3a4fb1 !important;
        border: none;
        border-radius: 8px;
        padding: 6px 10px;
    }

        .btn-primary:hover {
            background-color: #2c3d91 !important;
        }

    .btn-secondary {
        border-radius: 8px;
    }

    .badge {
        font-size: 12px;
        padding: 6px 10px;
        border-radius: 8px;
    }
</style>
