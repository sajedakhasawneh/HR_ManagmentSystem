@model SpaceSoftSolutions.Models.Task

@{
    Layout = "DashboardManagers";
}

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <!-- تصغير عرض النموذج ليكون أكثر وضوحًا -->
                <div class="card mb-4 shadow-lg" style="border-radius: 12px; background-color: #f8f9fa;">
                    <div class="card-header pb-0 text-center" style="background-color: #007bff; color: white; border-radius: 12px 12px 0 0;">
                        <h6 class="mb-0">Edit Task</h6>
                    </div>
                    <div class="card-body px-4 pt-4 pb-3">
                        <form asp-action="EditTask" asp-controller="Managers" method="post">
                            <input type="hidden" asp-for="Id" />

                            <div class="mb-3">
                                <label for="TaskName" class="form-label"><i class="fas fa-tasks"></i> Task Name</label>
                                <input type="text" class="form-control" id="TaskName" asp-for="TaskName" required>
                            </div>

                            <div class="mb-3">
                                <label for="Description" class="form-label"><i class="fas fa-align-left"></i> Description</label>
                                <textarea class="form-control" id="Description" asp-for="Description" rows="3" required></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="StartDate" class="form-label"><i class="fas fa-calendar-alt"></i> Start Date</label>
                                <input type="date" class="form-control" id="StartDate" asp-for="StartDate" required>
                            </div>

                            <div class="mb-3">
                                <label for="EndDate" class="form-label"><i class="fas fa-calendar-alt"></i> End Date</label>
                                <input type="date" class="form-control" id="EndDate" asp-for="EndDate" required>
                            </div>

                            <div class="mb-3">
                                <label for="EmployeeId" class="form-label"><i class="fas fa-user"></i> Assign to Employee</label>
                                <select class="form-control" asp-for="EmployeeId" required>
                                    <option value="">-- Select an Employee --</option>
                                    @foreach (var employee in ViewBag.Employees)
                                    {
                                        <option value="@employee.Value">@employee.Text</option>
                                    }
                                </select>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary w-100"><i class="fas fa-save"></i> Update Task</button>
                            </div>
                        </form>

                        <div class="text-center mt-3">
                            <a href="@Url.Action("Index", "Tasks")" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Back to Tasks</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
    .form-control {
        border-radius: 8px;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #0056b3;
        border: none;
        border-radius: 8px;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #004494;
        }

    .btn-outline-secondary {
        border-radius: 8px;
    }
</style>
