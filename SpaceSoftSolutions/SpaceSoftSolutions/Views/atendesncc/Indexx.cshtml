@model List<SpaceSoftSolutions.Models.Attendance>

@{
    Layout = "EmployeeDashboard";
}

<div class="container py-4">
    <div class="card shadow-lg rounded-4">
        <div class="card-header text-center text-white" style="background-color: #3a4fb1; border-radius: 12px 12px 0 0;">
            <h2 class="fw-bold mb-0">Attendance Records</h2>
        </div>
        <div class="card-body p-4">
            <h4 class="text-center text-primary">Employee ID: @ViewBag.EmployeeId</h4>
            <div class="table-responsive">
                <table class="table table-bordered text-center">
                    <thead class="bg-light">
                        <tr>
                            <th class="text-dark">Punch In</th>
                            <th class="text-dark">Punch Out</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model)
                        {
                            <tr>
                                <td class="fw-bold text-success">@record.PunchIn.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td class="fw-bold text-danger">
                                    @(record.PunchOut?.ToString("yyyy-MM-dd HH:mm:ss") ?? "Still Working")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-center bg-light">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary shadow">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

<style>
    /* تحسين مظهر الجدول */
    .table th, .table td {
        padding: 12px;
        font-size: 16px;
    }

    /* تحسين ألوان الأزرار */
    .btn-primary {
        background-color: #3a4fb1 !important;
        border-color: #3a4fb1 !important;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #2c3d91 !important;
            border-color: #2c3d91 !important;
        }

    /* تحسين الكارد */
    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    
</style>
